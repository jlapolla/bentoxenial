#!/usr/bin/env dash

dir=/vagrant/setup

. "$dir"/step

step cp "$dir"/bash/.bashrc ~
step cp "$dir"/git/.gitconfig "$dir"/git/.gitignore_global ~
step cp "$dir"/vim/.vimrc ~
step sudo apt-get update
step git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim
step_nolog vim +:PluginInstall +:qa

# Install Python system site packages
step sudo apt-get install -y python3-venv
step sudo apt-get install -y python3-psutil
step sudo apt-get install -y python3-tk

# Install native packages
step sudo apt-get install -y antlr4
step sudo apt-get install -y kcachegrind

# Set up Python virtual environment
step python3 -m venv --system-site-packages ~/env/python3
step . ~/env/python3/bin/activate
step pip install --upgrade pip

# Set up project
step git clone https://jlapolla@github.com/jlapolla/make-smart-recurse.git ~/git/autorecurse
step pip install -r ~/git/autorecurse/requirements.txt

